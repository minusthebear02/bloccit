<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Posts</h2>
<% if written_posts_yet? %>
  <%= render @user.posts %>
<% else %>
  <%= "#{@user.name} hasn't written any posts yet." %>
<% end %>


<h2>Comments</h2>
<% if written_comments_yet? %>
  <%= render @user.comments %>
<% else %>
  <%= "#{@user.name} hasn't written any comments yet." %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <h2>Favorites</h2>
    <% if favorited_posts_yet? %>
      <% @user.favorites.each do |fav| %>
      <div class="media">
        <%= render partial: 'votes/voter', locals: { post: fav.post } %>
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to fav.post.title, topic_post_path(@topic, fav.post) %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(fav.post.created_at) %> ago by <%= fav.post.user.name %> <br />
            <%= fav.post.comments.count %> Comments
          </small>
        </div>
      </div>
      <% end %>
    <% else %>
      <%= "#{@user.name} hasn't favorited any posts yet." %>
    <% end %>
  </div>
</div>
